<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:fillViewport="true"
    android:paddingTop="70sp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/uploadImageView"
            app:layout_constraintEnd_toEndOf="@+id/uploadImageView"
            app:layout_constraintStart_toStartOf="@+id/uploadImageView"
            app:layout_constraintTop_toTopOf="@+id/uploadImageView" />

        <ImageView
            android:id="@+id/uploadImageView"
            android:layout_width="247sp"
            android:layout_height="247sp"
            android:layout_margin="30sp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@+id/upload_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@color/colorAccent" />

        <EditText

            android:id="@+id/upload_name"
            android:layout_width="0dp"
            android:hint="Name"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:background="@drawable/inputfield_styles"
            android:textSize="15sp"
            android:inputType="textPersonName"

            app:layout_constraintBottom_toTopOf="@+id/upload_shopName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uploadImageView"
            app:layout_constraintWidth_percent="0.68" />

        <EditText
            android:id="@+id/upload_shopName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:background="@drawable/inputfield_styles"
            android:textSize="15sp"
            android:hint="Shop Name"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/upload_price"
            app:layout_constraintEnd_toEndOf="@+id/upload_name"
            app:layout_constraintStart_toStartOf="@+id/upload_name"
            app:layout_constraintTop_toBottomOf="@+id/upload_name"
            app:layout_constraintWidth_percent="0.68" />

        <EditText
            android:id="@+id/upload_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:background="@drawable/inputfield_styles"
            android:textSize="15sp"
            android:hint="Price"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/upload_phone"
            app:layout_constraintEnd_toEndOf="@+id/upload_shopName"
            app:layout_constraintStart_toStartOf="@+id/upload_shopName"
            app:layout_constraintTop_toBottomOf="@+id/upload_shopName"
            app:layout_constraintWidth_percent="0.68" />

        <EditText
            android:id="@+id/upload_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:background="@drawable/inputfield_styles"
            android:textSize="15sp"
            android:hint="Upload"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/upload_address"
            app:layout_constraintEnd_toEndOf="@+id/upload_price"
            app:layout_constraintStart_toStartOf="@+id/upload_price"
            app:layout_constraintTop_toBottomOf="@+id/upload_price"
            app:layout_constraintWidth_percent="0.68" />

        <EditText
            android:id="@+id/upload_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:background="@drawable/inputfield_styles"
            android:textSize="15sp"
            android:inputType="textPersonName"
            android:hint="Address"
            app:layout_constraintBottom_toTopOf="@+id/upload_discription"
            app:layout_constraintEnd_toEndOf="@+id/upload_phone"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/upload_phone"
            app:layout_constraintTop_toBottomOf="@+id/upload_phone"
            app:layout_constraintWidth_percent="0.68" />

        <Button
            android:id="@+id/post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_style"
            android:text="Post"
            android:textColor="#ffffff"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/upload_discription"
            app:layout_constraintTop_toBottomOf="@+id/upload_discription"
            app:layout_constraintVertical_bias="0.0"></Button>

        <Button
            android:id="@+id/choosePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="220dp"
            android:background="@drawable/btn_style"
            android:padding="5sp"
            android:text="Choose Picture"
            android:textColor="#ffffff"
            android:textSize="15sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/post"
            app:layout_constraintEnd_toStartOf="@+id/post"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/upload_discription"></Button>

        <EditText
            android:id="@+id/upload_discription"
            android:layout_width="0dp"
            android:layout_height="173sp"
            android:layout_margin="8sp"
            android:layout_marginStart="16sp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/inputfield_styles"
            android:hint="Description"
            android:inputType="textPersonName"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/choosePic"
            app:layout_constraintEnd_toEndOf="@+id/upload_address"
            app:layout_constraintHorizontal_bias="0.562"
            app:layout_constraintStart_toStartOf="@+id/upload_address"
            app:layout_constraintTop_toBottomOf="@+id/upload_address"
            app:layout_constraintWidth_percent="0.68" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>